{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": ["react", "jsf-a11y", "import"],
    "roles": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "global-required": "off",
        "import/prefer-default-export": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^-"
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowTaggedTemplates": true
            }
        ]
    }
}
